   "source": [
    "# split all files in 2 halves\n",
    "for root, dirs, files in os.walk(\"./emojis\"):\n",
    "    for file in files:\n",
    "#         print(root, file)\n",
    "        crop(root, file)"
   ]
  },
  {
   "cell_type": "code",
